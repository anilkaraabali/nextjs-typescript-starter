{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"],
      "enums/*": ["src/enums/*"],
      "helpers/*": ["src/helpers/*"],
      "library/*": ["src/library/*"],
      "pages/*": ["src/pages/*"],
      "services/*": ["src/services/*"],
      "layout/*": ["src/layout/*"],
      "styles/*": ["src/styles/*"],
      "types/*": ["src/types/*"]
    }
  },
  "include": ["**.*.d.ts", "**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": ["node_modules"]
}
